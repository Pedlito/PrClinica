@model IEnumerable<BD_PR_01_Clinicas.Models.RegistroProducto>

@if (Model.Count() > 0)
{
    <table class="table table-hover">
        <thead>
            <tr class="info">
                <th>
                    Producto
                </th>
                <th>
                    Categoría
                </th>
                <th>
                    Presentación
                </th>
                <th>
                    Dosis
                </th>
                <th>
                    Prescripción
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.nombre
                    </td>
                    <td>
                        @item.categoria
                    </td>
                    <td>
                        @item.presentacion
                    </td>
                    <td>
                        @item.dosis
                    </td>
                    <td>
                        @item.descripcion
                    </td>
                    <td>
                        <button type="button" class="btn btn-danger btn-xs" onclick="quitarReceta(@item.codProducto)">
                            <span class="glyphicon glyphicon-remove"></span> Quitar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

