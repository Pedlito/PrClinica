@model IEnumerable<BD_PR_01_Clinicas.Models.tbCategoria>

@{
    ViewBag.Title = "Categorias";
}

<h2>Categorias</h2>

<p>
    @Html.ActionLink("Nueva Categoría", "Crear")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Categoría")
        </th>
        <th>
            @Html.DisplayName("Estado")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.categoria)
        </td>
        <td>
            @Html.CheckBoxFor(modelItem => item.estado.Value, new { onclick = "return false" })
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { codCategoria = item.codCategoria }) |
            @if (item.estado == true)
            {
                @Html.ActionLink("Deshabilitar", "CambiarEstado", new { codCategoria = item.codCategoria, estado = false })
            }
            else
            {
                @Html.ActionLink("Habilitar", "CambiarEstado", new { codCategoria = item.codCategoria, estado = true })
            }
        </td>
    </tr>
}

</table>
