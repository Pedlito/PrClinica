@model IEnumerable<BD_PR_01_Clinicas.Models.RegistroProducto>

@{
    ViewBag.Title = "Detalles";
}

<h2>Entrada</h2>
<div>
    <dl class="dl-horizontal">
        <dt><h4>@Html.DisplayName("Descripción:")</h4></dt>
        <dd><h4>@ViewBag.descripcion</h4></dd>
        <dt><h4>@Html.DisplayName("Fecha:")</h4></dt>
        <dd><h4>@ViewBag.fechaEntrada</h4></dd>
    </dl>
</div>
<hr />

<ul class="list-group">
    @*Fila de titulos*@
    <li class="list-group-item list-group-item-heading list-group-item-info">
        <div class="row">
            <div class="col-xs-4 text-left">
                <b>Producto</b>
            </div>
            <div class="col-xs-2 text-left">
                <b>Categoría</b>
            </div>
            <div class="col-xs-2 text-left">
                <b>Presentación</b>
            </div>
            <div class="col-xs-2 text-left">
                <b>Dosis</b>
            </div>
            <div class="col-xs-2">
                <b>Cantidad</b>
            </div>
        </div>
    </li>

    @foreach (var item in Model)
    {
        //Contenido
        <li class="list-group-item">

            <div class="row">
                <div class="col-xs-4 text-left">
                    @item.nombre
                </div>
                <div class="col-xs-2 text-left">
                    @item.categoria
                </div>
                <div class="col-xs-2 text-left">
                    @item.presentacion
                </div>
                <div class="col-xs-2 text-left">
                    @item.dosis
                </div>
                <div class="col-xs-2 text-left">
                    @item.cantidad
                </div>
            </div>
        </li>
    }

</ul>
