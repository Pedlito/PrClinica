@using PagedList.Mvc;
@model PagedList.IPagedList<BD_PR_01_Clinicas.Models.tbEntrada>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
}

<h2>Entradas</h2>


    <p>
        @Html.ActionLink("Nueva entrada", "Crear")
    </p>


<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-info">
            <th>
                @Html.DisplayName("Descripcion")
            </th>
            <th>
                @Html.DisplayName("Fecha de entrada")
            </th>
            <th></th>
        </tr>
    </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.descripcion)
                </td>
                <td>
                    @item.fechaEntrada.Value.ToLongDateString()
                </td>
                <td>
                    @Html.ActionLink("Detalles", "Detalles", new { codEntrada = item.codEntrada }, htmlAttributes: new { @class = "btn btn-xs btn-info" })
                </td>
            </tr>
        }

</table>
Pagina @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
<div>
    @Html.ActionLink("Regresar", "Administracion", "Home", null, htmlAttributes: new { @class = "btn btn-primary" })
</div>