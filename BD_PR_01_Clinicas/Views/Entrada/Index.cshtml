@model IEnumerable<BD_PR_01_Clinicas.Models.tbEntrada>

@{
    ViewBag.Title = "Index";
}

<h2>Entradas</h2>

<p>
    @Html.ActionLink("Nueva entrada", "Crear")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaEntrada)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @item.fechaEntrada.Value.ToLongDateString()
        </td>
        <td>
            @Html.ActionLink("Detalles", "Detalles", new { codEntrada=item.codEntrada }, htmlAttributes: new { @class = "btn btn-xs btn-info" })
        </td>
    </tr>
}

</table>
<div>
    @Html.ActionLink("Regresar", "Administracion", "Home", null, htmlAttributes: new { @class = "btn btn-default" })
</div>