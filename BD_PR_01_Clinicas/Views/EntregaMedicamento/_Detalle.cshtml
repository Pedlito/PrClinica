@model IEnumerable<BD_PR_01_Clinicas.Models.RegistroProducto>

@* aqui hay un if que indica que si el modelo esta vacio no se crea nada de codigo html y se devuelve una vista parcial vacia
    de lo contrario se crea el boton Guardar que hace referencia a la funcion guardar(), esta funcion es la que envia todos los datos
    al post de crear y lo inserta a la base de datos para finalizar y guardar la entrada *@

@if (Model.Count() > 0)
{
    //aqui creo la lista que contiene todos los productos ya agregados a el detalle de Entrada
    <ul id="facturador-detalle" class="list-group">
        <li class="list-group-item list-group-item-heading list-group-item-info">
            <div class="row">
                <div class="col-xs-2 text-left">
                    <b>Producto</b>
                </div>
                <div class="col-xs-2 text-left">
                    <b>Categoría</b>
                </div>
                <div class="col-xs-2 text-left">
                    <b>Presetación</b>
                </div>
                <div class="col-xs-1 text-center">
                    <b>Dosis</b>
                </div>
                <div class="col-xs-1 text-center">
                    <b>Existencia</b>
                </div>
                <div class="col-xs-2 text-center">
                    <b>Cantidad</b>
                </div>
                <div class="col-xs-2"></div>
            </div>
        </li>
        @foreach (var item in Model)
        {
            <li class="list-group-item">
                <input type="hidden" value="@item.existencia" />
                <div class="row">
                    <div class="col-xs-2 text-left">
                        <label class="btn">@item.nombre</label>
                    </div>
                    <div class="col-xs-2 text-left">
                        <label class="btn">@item.categoria</label>
                    </div>
                    <div class="col-xs-2 text-left">
                        <label class="btn">@item.presentacion</label>
                    </div>
                    <div class="col-xs-1 text-left">
                        <label class="btn">@item.dosis</label>
                    </div>
                    <div class="col-xs-1 text-center">
                        <label class="btn">@item.existencia</label>
                    </div>
                    <div class="col-xs-2 text-right">
                        <input type="number" class="form-control input-sm cant" value="@item.cantidad" onchange="cantidad(@item.codProducto,this,@item.existencia)" onkeypress = "return numerico(event)"/>
                    </div>
                    <div class="col-xs-2 text-right">
                        <button type="button" class="btn btn-danger" onclick="quitar(@item.codProducto, event)">
                            <span class="glyphicon glyphicon-remove"></span> Quitar
                        </button>
                    </div>
                </div>
            </li>
        }

    </ul>
}

