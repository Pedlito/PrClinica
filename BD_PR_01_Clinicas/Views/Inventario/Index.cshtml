@using PagedList.Mvc;
@model PagedList.IPagedList<BD_PR_01_Clinicas.Models.Inventario>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
}

<h2>Inventario</h2>

    <p>
        @Html.ActionLink("Generar reporte", "ReporteDeInventario")
    </p>


<table class="table table-striped table-hover" >
    <thead>
        <tr class="bg-info">
            <th >
                @Html.DisplayName("Producto")
            </th>
            <th>
                @Html.DisplayName("Categoría")
            </th>
            <th>
                @Html.DisplayName("Presentación")
            </th>
            <th>
                @Html.DisplayName("Dosis")
            </th>
            <th>
                @Html.DisplayName("Existencias")
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.producto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.categoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.presentacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dosis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.existencia)
                </td>
            </tr>
        }
    </tbody>
</table>
Pagina @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
<div>
    <a href="@Url.Action("Administracion", "Home")" class="btn btn-primary">
        <span class="glyphicon glyphicon-arrow-left"></span> Regresar
    </a>
</div>