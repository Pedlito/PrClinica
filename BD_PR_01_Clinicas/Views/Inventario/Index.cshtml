@using PagedList.Mvc;
@model PagedList.IPagedList<BD_PR_01_Clinicas.Models.Inventario>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
}

<h2>Invetario</h2>

    <p>
        @Html.ActionLink("Generar reporte", "ReporteDeInventario")
    </p>


<table class="table table-striped table-hover" >
    <thead>
        <tr class="bg-info">
            <th >
                @Html.DisplayName("Producto")
            </th>
            <th>
                @Html.DisplayName("Categoría")
            </th>
            <th>
                @Html.DisplayName("Presentación")
            </th>
            <th>
                @Html.DisplayName("Dosis")
            </th>
            <th>
                @Html.DisplayName("Existencias")
            </th>

        </tr>
          </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.producto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.categoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.presentacion)
                </td>
                @if (item.codVolumen == 1)
                {
                    <td>
                        @item.dosis mg
                    </td>
                }
                else if (item.codVolumen == 2)
                {
                    <td>
                        @item.dosis ml
                    </td>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.existencia)
                </td>
            </tr>
        }

</table>
Pagina @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
<div>
    <a href="@Url.Action("Administracion", "Home")" class="btn btn-primary">
        <span class="glyphicon glyphicon-arrow-left"></span> Regresar
    </a>
</div>