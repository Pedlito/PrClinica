@model BD_PR_01_Clinicas.Models.tbPresentacion

@{
    ViewBag.Title = "CambiarEstado";
}

@if (Model.estado == true)
{
    <h2>Deshabilitar</h2>

    <h3>¿Realmente quieres deshabilitar esta presentación?</h3>
}
else
{
    <h2>Habilitar</h2>

    <h3>¿Realmente quieres habilitar esta presentación?</h3>
}

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Categoría")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.presentacion)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @if (Model.estado == true)
            {
                <button type="submit" class="btn btn-danger">
                    <span class="glyphicon glyphicon-trash"></span> Deshabilitar
                </button>
            }
            else
            {
                <button type="submit" class="btn btn-info">
                    <span class="glyphicon glyphicon-record"></span> Habilitar
                </button>
            }
            <a href="@Url.Action("Index")" class="btn btn-primary">
                <span class="glyphicon glyphicon-arrow-left"></span> Regresar
            </a>
        </div>
    }
</div>
