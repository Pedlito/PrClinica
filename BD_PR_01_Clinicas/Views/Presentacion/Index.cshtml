@model IEnumerable<BD_PR_01_Clinicas.Models.tbPresentacion>

@{
    ViewBag.Title = "Presentaciones";
}

<h2>Presentaciones</h2>

<p>
    @Html.ActionLink("Nueva Presentación", "Crear")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Presentación")
        </th>
        <th>
            @Html.DisplayName("Estado")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.presentacion)
        </td>
        <td>
            @Html.CheckBoxFor(modelItem => item.estado.Value, new { onclick = "return false" })
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { codPresentacion = item.codPresentacion }) |
            @if (item.estado == true)
            {
                @Html.ActionLink("Deshabilitar", "CambiarEstado", new { codPresentacion = item.codPresentacion, estado = false })
            }
            else
            {
                @Html.ActionLink("Habilitar", "CambiarEstado", new { codPresentacion = item.codPresentacion, estado = true })
            }
        </td>
    </tr>
}

</table>
