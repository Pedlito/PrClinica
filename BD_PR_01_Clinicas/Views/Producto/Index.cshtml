@model IEnumerable<BD_PR_01_Clinicas.Models.tbProducto>

@{
    ViewBag.Title = "Index";
}

<h2>Productos</h2>

<p>
    @Html.ActionLink("Nuevo Producto", "Crear")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Producto")
        </th>
        <th>
            @Html.DisplayName("Categoría")
        </th>
        <th>
            @Html.DisplayName("Presentación")
        </th>
        <th>
            @Html.DisplayName("Dosis")
        </th>
        <th>
            @Html.DisplayName("Estado")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.producto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbCategoria.categoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbPresentacion.presentacion)
        </td>
        @if (item.codVolumen == 1)
        {
            <td>
                @item.dosis mg
            </td>
        }
        else if (item.codVolumen == 2)
        {
            <td>
                @item.dosis ml
            </td>
        }
        <td>
            @Html.CheckBoxFor(modelItem => item.estado.Value, new { onclick = "return false" })
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { codProducto=item.codProducto }) |
            @if (item.estado == true)
            {
                @Html.ActionLink("Deshabilitar", "Deshabilitar", new { codProducto = item.codProducto })
            }
            else
            {
                @Html.ActionLink("Habilitar", "Habilitar", new { codProducto = item.codProducto })
            }
        </td>
    </tr>
}

</table>
