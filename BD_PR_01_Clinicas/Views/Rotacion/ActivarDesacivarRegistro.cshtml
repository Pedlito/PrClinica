@model BD_PR_01_Clinicas.Models.tbConfiguracion

@{
    ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Habilitar registro de usuarios</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2>Permite que los usuarios se registren</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.codConfiguracion)

        <div class="form-group">
           
            <div class="col-md-2">
                @Html.Label("Habilitar registro", htmlAttributes: new { @class = "control-label" })
            </div>
             <div class="checkbox col-md-1">                
                    @Html.CheckBoxFor(model => model.valor)
             </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-floppy-save"></span> Guardar cambios
                </button>
            </div>
            <div class="col-md-7">
                <a class="btn btn-primary" href="/Home/Administracion"><span class="glyphicon glyphicon-arrow-left"></span> Regresar</a>   
            </div>
        </div>

    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
