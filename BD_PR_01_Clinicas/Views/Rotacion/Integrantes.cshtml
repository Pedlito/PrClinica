@model IEnumerable<BD_PR_01_Clinicas.Models.tbRotacionUsuario>

@{
    ViewBag.Title = "Integrantes";
}
@if (!ViewBag.mostrar)
{
    <hr />
    <div>
        <a href="/Rotacion/Integrantes?id=@ViewBag.idRotacion&accion=1">Agregar integrante</a>
    </div>
}
else
{
    <section>
        @*action="/Rotacion/Integrantes?id=1&amp;accion=1" method="post"*@
        @using (Html.BeginForm("AgregarIntegrante", "Rotacion", FormMethod.Post, new { @id = "formId", @class = "form-inline", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-inline">
                <h4>Agregar integrante</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.Hidden("codRotacion", ViewBag.idRotacion as int?)
                <div class="form-group">
                    @Html.Label("Nombre", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-4">
                        @Html.DropDownList("codUsuario", null, htmlAttributes: new { @class = "form-control" })
                        @*@Html.ValidationMessage("mensaje", null, new { @class = "label label-danger" })*@
                        @*@Html.ValidationMessage("mensaje", null, new { @class = "text-danger" })*@
                    </div>
                    @Html.ValidationMessage("mensajeus", null, new { @class = "label label-danger" })
                </div>

                <div class="form-group">
                    <div class="col-md-4">
                        @*<input type="submit" value="Guardar" class="btn btn-default" />*@
                        <button type="submit" class="btn btn-success">
                            <span class="glyphicon glyphicon-plus"></span> Agregar
                        </button>
                    </div>
                </div>
              
            </div>
        }
    </section>
}
