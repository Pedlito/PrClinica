@model BD_PR_01_Clinicas.Models.tbDetalleSalida

@{
    ViewBag.Title = "cantidad";
}

<h2>Cantidad</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Producto")
        </dt>

        <dd>
            @ViewBag.producto
        </dd>

        <dt>
            @Html.DisplayName("Categoría")
        </dt>

        <dd>
            @ViewBag.categoria
        </dd>

        <dt>
            @Html.DisplayName("Presentación")
        </dt>

        <dd>
            @ViewBag.presentacion
        </dd>

        <dt>
            @Html.DisplayName("Volumen")
        </dt>

        @if (ViewBag.codVolumen == 1)
        {
            <dd>
                mg
            </dd>
        }
        else if (ViewBag.codVolumen == 2)
        {
            <dd>
                ml
            </dd>
        }

    </dl>
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>tbDetalleSalida</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Hidden("codSalida", (int)ViewBag.codSalida)
        @Html.Hidden("codProducto", (int)ViewBag.codProducto)
        <div class="form-group">
            @Html.Label("Cantidad que sale", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cantidad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cantidad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Agregar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Cancelar", "ListaProductos", new { codSalida = (int)ViewBag.codSalida })
</div>

