@using PagedList.Mvc;
@model PagedList.IPagedList<BD_PR_01_Clinicas.Models.tbTipoSangre>

@{
    ViewBag.Title = "Index";
}

<h2>Tipos de Sangre</h2>

<p>
    @Html.ActionLink("Nuevo", "Crear")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Tipo de Sangre")
        </th>
        <th>
            @Html.DisplayName("Estado")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tipoSangre)
        </td>
        <td>
            @Html.CheckBoxFor(modelItem => item.estado.Value, new { onclick = "return false" })
        </td>
        <td>
            <a class="btn btn-xs btn-primary" href="/TipoSangre/Editar?codTipoSangre=@item.codTipoSangre"><span class="glyphicon glyphicon-edit"></span> Editar</a>
            @if (item.estado == true)
            {
                @Html.ActionLink("Deshabilitar", "CambiarEstado", new { codTipoSangre = item.codTipoSangre, estado = false }, htmlAttributes: new { @class = "btn btn-xs" })
            }
            else
            {
                @Html.ActionLink("Habilitar", "CambiarEstado", new { codTipoSangre = item.codTipoSangre, estado = true }, htmlAttributes: new { @class = "btn btn-xs" })
            }
        </td>
    </tr>
}

</table>
Pagina @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))